      <%= doctor_avatar(class: 'h-40 w-full object-cover border rounded-lg doc-avatar') %>
      <div class="text-md tracking-wide mt-4 text-center">
        Posted: <%=job_posted%>
      </div>
    </div>
    <div class="w-full">
