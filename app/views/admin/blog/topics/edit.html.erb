<header class="flex">
  <div class="w-1/2">
    <div class="inline-flex text-gray-600">
      <h1 class="font-semibold text-2xl">Update Topic</h1>
    </div>
  </div>
  <div class="w-1/2">
    <a href="<%=admin_topics_url%>" class="btn btn-md btn-default btn-outline text-sm font-bold float-right text-gray-600">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 inline-block">
        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      <span class="leading-tight">Back to topics</span>
    </a>
  </div>
</header>
<section class="flex mt-6">
  <div class="w-full" data-controller="message tinymce slug topic">
    <div class="w-full z-10" data-message-target="errors"></div>
    <%= render partial: 'form', locals: {topic: @topic, statuses: @statuses, categories: @categories, button_text: 'Update', authors: @authors} %>
  </div>
</section>
