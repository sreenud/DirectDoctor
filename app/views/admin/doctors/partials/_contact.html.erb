<div class="w-full flex mt-4">
  <div class="w-1/3">
    <div class="text-gray-600 text-md font-bold">Contact Information</div>
    <p class="text-gray-600 text-sm"> About contact information </p>
  </div>
  <div class="w-2/3" data-controller="places">
    <div class="input-group">
      <%= form.label :email, :class => "label text-gray-500" %>
      <%= form.text_field :email, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="input-group">
      <%= form.label :phone, :class => "label text-gray-500" %>
      <%= form.text_field :phone, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="input-group">
      <label class="label text-gray-600" for="doctor_Practice/Clinic name">Business Address<span class="text-red-700 pl-1">*</span></label>
      <%= form.search_field :address_line_1, :class => "input bg-white" %>
    </div>
    <div class="input-group">
      <label class="label text-gray-600" for="doctor_Practice/Clinic name">Unit/Suite</label>
      <%= form.text_field :address_suite, :class => "input bg-white" %>
    </div>
    <div class="w-full flex">
      <div class="w-1/3">
        <div class="input-group">
          <label class="label text-gray-500" for="doctor_state">State<span class="text-red-700 pl-1">*</span></label>
          <%= form.text_field :state, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
      <div class="w-1/3 ml-2">
        <div class="input-group">
          <label class="label text-gray-500" for="doctor_city">City<span class="text-red-700 pl-1">*</span></label>
          <%= form.text_field :city, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
      <div class="w-1/3 ml-2">
        <div class="input-group">
          <label class="label text-gray-500" for="doctor_zip_code">Zip Code<span class="text-red-700 pl-1">*</span></label>
          <%= form.text_field :zipcode, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
    </div>
    <div class="w-full flex">
      <div class="w-1/2">
        <div class="input-group">
          <label class="label text-gray-500" for="doctor_latitude">Latitude<span class="text-red-700 pl-1">*</span></label>
          <%= form.text_field :lat, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
      <div class="w-1/2 ml-2">
        <div class="input-group">
          <label class="label text-gray-500" for="doctor_longitude">Longitude<span class="text-red-700 pl-1">*</span></label>
          <%= form.text_field :lng, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
    </div>
    <div class="input-group">
      <%= form.label :fax, :class => "label text-gray-500" %>
      <%= form.text_field :fax, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="input-group">
      <label class="label text-gray-500" for="doctor_webiste_url">Wesite URL</label>
      <%= form.text_field :website_url, :class => "input bg-white", :autocomplete => "off" %>
    </div>
  </div>
</div>
<div class="w-full flex mt-4 border-t border-doctor-blue">
  <div class="w-full flex mt-4">
    <div class="w-1/3">
      <div class="text-gray-600 text-md font-bold">Social Profiles</div>
      <p class="text-gray-600 text-sm"> About social profiles </p>
    </div>
    <div class="w-2/3" data-controller="components">
      <!-- components -->
      <% social_links = { 'social_link' => nil } %>
      <template data-components-target="componentTemplate">
        <%= render "admin/doctors/partials/social_links", value: social_links %>
      </template>
      <div class="input-group">
        <label class="label text-gray-500" for="doctor_social_profile">Social Profile</label>
        <div class="mt-2 sortable" data-components-target="components">
          <% if form&.object&.social_profiles.present? && form&.object&.social_profiles != "NA" %>
            <% form&.object&.social_profiles.each do |social_links| %>
              <div class="mb-3">
                <%= render "admin/doctors/partials/social_links", value: social_links %>
              </div>
            <% end %>
          <% else %>
            <div class="mb-3">
              <%= render "admin/doctors/partials/social_links", value: social_links %>
            </div>
          <% end %>
        </div>
        <div class="text-sm text-primary underline text-gco">
          <label class="cursor-pointer" data-action="click->components#addComponent">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 inline-block">
              <path fillRule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clipRule="evenodd" />
            </svg>Add Social Profile</label>
        </div>
      </div>
      <!-- components -->
    </div>
  </div>
</div>
<% if form_type == 'provider' %>
  <div class="float-right pt-5 my-4">
    <a href="<%=next_page_url%>" class="btn btn-md btn-default btn-dd-blue btn-outline text-sm font-bold float-left">
      Next page
    </a>
  </div>
<% end %>
