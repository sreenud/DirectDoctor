<div class="w-full flex mt-4">
  <div class="w-1/3">
    <div class="text-gray-600 text-md font-bold">Pricing Information</div>
    <p class="text-gray-600 text-sm"> You could write free text here </p>
  </div>
  <div class="w-2/3" data-controller="components">
    <!-- components -->
    <% price = { 'name' => nil } %>
    <template data-components-target="componentTemplate">
      <%= render "admin/doctors/partials/pricing_info", value: price %>
    </template>
    <div class="input-group">
      <%= form.label :prices, :class => "label text-gray-500" %>
      <div class="mt-2 sortable" data-components-target="components">
        <% if form.object.prices.present? %>
          <% form.object.prices.each do |price| %>
            <div class="mb-3">
              <%= render "admin/doctors/partials/pricing_info", value: price %>
            </div>
          <% end %>
        <% else %>
          <div class="mb-3">
            <%= render "admin/doctors/partials/pricing_info", value: price %>
          </div>
        <% end %>
      </div>
      <div class="text-sm text-primary underline text-gco">
        <label class="cursor-pointer" data-action="click->components#addComponent">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 inline-block">
            <path fillRule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clipRule="evenodd" />
          </svg>Add Price</label>
      </div>
    </div>
    <!-- components -->
  </div>
</div>
