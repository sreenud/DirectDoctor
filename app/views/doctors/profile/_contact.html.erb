<div class="w-full shadow rounded-lg border border-gray-300 mt-4 section-position" id="contact">
  <div class="text-lg font-glacialbold tracking-wide pl-4 pt-3">
    Contact
  </div>
  <div class="py-3 pl-4 w-full flex">
    <div class="w-5/12 md:w-4/12" data-controller="profiles" data-profiles-location="<%= doctor.to_coordinates.join(',') %>">
      <div id="map" style="height: 160px"></div>
    </div>
    <div class="w-7/12 md:w-8/12 ml-6">
      <div class=" text-gray-600 text-sm">Address</div>
      <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
        <span itemprop="streetAddress"><%=doctor&.address_line_1%></span>,
        <span><%=doctor&.address_suite%></span>,
        <span itemprop="addressLocality"><%=doctor&.city%></span>,
        <h2><span itemprop="addressRegion"><%=doctor&.state%></span></h2>
        ,
        <span itemprop="postalCode"><%=doctor&.zipcode%></span>
      </div>
      <div style="display: none;" itemprop="geo" itemscope itemtype="http://schema.org/GeoCoordinates">
        <meta itemprop="longitude" content="<%=doctor.lat%>">
        <meta itemprop="latitude" content="<%=doctor.lng%>">
      </div>
      <div class="w-full flex mt-3">
        <div class="pt-1"><%= image_pack_tag "icons/email.svg", class: "w-5 h-5" %></div>
        <a href="mailto:<%=doctor&.email%>" class="hover:underline hover:text-blue-400">
          <div class="ml-4">Message</div>
        </a>
      </div>
      <div class="w-full flex mt-1">
        <div class="pt-1"><%= image_pack_tag "icons/phone.svg", class: "w-5 h-5" %></div>
        <a href="tel:<%=doctor.formated_phone_number%>" class="hover:underline hover:text-blue-400">
          <div class="ml-4" itemprop="telephone"><%=doctor.phone%></div>
        </a>
      </div>
      <div class="w-full flex mt-1">
        <div class="pt-1"><%= image_pack_tag "icons/web.svg", class: "w-5 h-5" %></div>
        <a href="<%=doctor.website_url%>" target="_blank" class="hover:underline hover:text-blue-400" >
          <div class="ml-4">Website</div>
        </a>
      </div>
    </div>
  </div>
  <div class="absolute right-0 -mr-24 -mt-40 z-50 hidden md:block">
    <%=image_pack_tag "yellow_circle_big_shadow.svg", class: "w-16" %>
  </div>
  <div class="absolute right-0 -mr-32 -mt-48 hidden md:block">
    <%=image_pack_tag "light_yellow_slant.svg", class: "w-16" %>
  </div>
  <div class="absolute right-0 -mr-32 z-50 -mt-32 hidden md:block">
    <%=image_pack_tag "off_white_half_full_circle.svg", class: "w-16" %>
  </div>
</div>
