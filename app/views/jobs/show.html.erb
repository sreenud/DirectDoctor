        <ul class="list-none p-0 inline-flex">
          <li class="flex items-left">
            <a href="#" class="text-doctor-yellow pr-2">Home</a>
            <span class="text-gray-500 pr-2">&gt;</span>
          </li>
          <li class="flex items-left">
            <a href="#" class="text-doctor-yellow pr-2">Find a Job</a>
            <span class="text-gray-500 pr-2">&gt;</span>
          </li>
          <li class="text-gray-500" aria-current="page">
            State
          </li>
        </ul>
      </nav>
      <div class="lg:w-full flex mt-10 w-4">
        <div class="w-4/12 mr-8">
          <div class="w-full sticky top-0 z-50 bg-white rounded-2lg">
            <div class="w-full flex " data-controller="modal">
              <div class="w-1/2 bg-doctor-gray-100 pl-2 rounded-2lg">
                <%= image_pack_tag "doctor_full.png", class: "w-48" %>
              </div>
              <div class="w-1/2 ml-4">
                <h2 class="text-3xl font-glacialbold"><%=@job.doctor&.name%></h2>
                <div class="w-full flex">
                  <%= render(StarRatingComponent.new(rating: @doctor_rating&.avg_rating.round, class: 'doc-rating', width: '5', height: '5')) %>
                  <div class=" text-xs ml-2">
                    <a href="#" class="text-blue-500"> (<%=@doctor_rating&.total%> Reviews)</a>
                  </div>
                </div>
                <div class="w-full text-base py-1 text-gray-700">
                  FMDD Score: <%=@job&.doctor&.fmdd_score%>/10
                </div>
                <div class="w-full flex">
                  <div class="">
