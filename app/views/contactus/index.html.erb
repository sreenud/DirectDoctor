<section class="lg:grid lg:w-full lg:mt-24 lg:grid-cols-12 flex mt-32 ">
  <div class="lg:col-span-1 relative">
    <div class="absolute mt-32 hidden lg:block">
      <%= image_pack_tag 'grey_cross_vector.svg', class: "w-8" %>
    </div>
  </div>
  <div class="lg:col-span-10 flex mt-16 px-6 lg:px-16 mb-16 w-full">
    <div class="lg:w-3/6 shadow-lg bg-white mx-auto rounded-lg">
      <div class="about-gray-background-light p-5 text-center rounded-t">
        <h1 class=" font-glacialbold text-3xl leading-none uppercase">
          Contact Us
        </h1>
      </div>
      <form class="p-8">
        <div class="flex justify-center items-center w-full bg-white shadow mb-4 rounded-lg border border-gray-100">
          <label class="ml-3 mr-5">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="w-5 text-gray-600" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </label>
          <input class="my-3 w-full focus:outline-none border border-transparent focus:border-gray-200 bg-white" autocomplete="off" placeholder="Name" type="text">
        </div>
        <div class="flex justify-center items-center w-full bg-white shadow mb-4 rounded-lg border border-gray-100">
          <label class="ml-3 mr-5">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="w-5 text-gray-600" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </label>
          <input class="my-3 w-full focus:outline-none border border-transparent focus:border-gray-200 bg-white" autocomplete="off" placeholder="Email" type="text">
        </div>
        <div class="flex justify-center w-full bg-white shadow mb-4 rounded-lg border border-gray-100">
          <label class="ml-3 mr-5 mt-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="w-5 text-gray-600" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
          </label>
          <textarea class="my-3 w-full focus:outline-none border border-transparent focus:border-gray-200 bg-white" autocomplete="off" placeholder="Message" rows="3"></textarea>
        </div>
        <div class="mx-auto text-center mt-8">
          <button name="button" type="submit" class="bg-doctor-yellow px-8 py-2  rounded-lg text-gray-100 shadow hover:bg-doctor-yellow-500 font-hurmebold  tracking-normal" data-disable-with="<i class='fab fa fa-spinner fa-spin pr-2'></i> Submiting....">
          <span>Submit</span>
        </button>
      </div>
    </form>
  </div>
</div>
<div class="lg:col-span-1 relative hidden lg:block">
  <div class="absolute right-0 mt-8 mr-8">
    <%=image_pack_tag 'light_grey_2_lines_vertical.svg', class: "h-56" %>
  </div>
  <div class="right-0 absolute -mr-4 -mt-20 z-50">
    <%= image_pack_tag 'yellow_circle_outline_opacity_right.png' %>
  </div>
</div>
</section>
